<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7c7c7"
    tools:context=".Fragments.CalculadoraFragment">

    <LinearLayout android:id="@+id/calc"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:paddingTop="40dp">

        <TextView
            android:id="@+id/textViewImporte"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textStyle="bold"
            android:textSize="5sp"
            android:paddingTop="5dp"
            android:gravity="center_horizontal"
            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txtNumero"
                android:textSize="30dp"
                android:padding="15dp"
                android:textColor="#0fff4d"
                android:background="#636363"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/main_btn_limpia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/borrar"
                android:textSize="20dp"

                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <GridLayout tools:context=".GridXMLActivity"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/gridLayoutCalc"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="5"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingTop="20dp">
                >

                <Button
                    android:id="@+id/main_btn_7"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:text="7"
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/main_btn_8"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:text="8"
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/main_btn_9"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:text="9"
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/main_btn_mas"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:text="+"
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/main_btn_4"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:text="4"
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/main_btn_5"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:text="5"
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/main_btn_6"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:text="6"
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/main_btn_x"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="3"
                    android:layout_row="1"
                    android:text="x"
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/main_btn_1"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:text="1"
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/main_btn_2"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:text="2"
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/main_btn_3"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:text="3"
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/main_btn_div"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:text="/"
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/main_btn_0"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:text="0"
                    android:textSize="20dp"
                    />
<!-- android:onClick="onClickBtn0"-->
                <Button
                    android:id="@+id/main_btn_punto"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:text="."
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/main_btn_igual"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:text="="
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/main_btn_menos"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_column="3"
                    android:layout_row="3"
                    android:text="-"
                    android:textSize="20dp"
                    />

            </GridLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>
