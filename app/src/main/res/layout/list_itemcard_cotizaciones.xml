<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingTop="0dp"
    android:orientation="vertical"
    tools:context=".Activities.MainActivity"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        card_view:cardCornerRadius="2dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardBackgroundColor="#c7c7c7">

        <!-- card_view:cardBackgroundColor="E2E2E2" -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagenBandera"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"

                />


            <TextView
                android:id="@+id/lblListItem"
                android:layout_width="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagenBandera"
                android:textSize="15sp"
                android:padding="0dp"
                android:paddingBottom="1dp"
                android:textColor="#565656"/>


            <TextView
                android:id="@+id/lblCodigoIso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imagenBandera"
                android:layout_alignParentTop="true"
                android:textSize="25sp"
                android:layout_margin="5dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/precioCompra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/precioVenta"
                android:textSize="25sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="55dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/precioVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="25sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:textColor="#000000"/>



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>